<li class="list-group-item">
	<span class="description"><b><%= micropost.content %></b> </span>
	<span class="description">Posted <sub><%= time_ago_in_words(micropost.created_at) %> </sub>
	</span>
	<% if current_user?(micropost.user) %>
		<%= link_to "Delete" ,micropost,method: 'delete',confirm: "Are you Sure?",title: micropost.content %>
	<% end %>
</li>