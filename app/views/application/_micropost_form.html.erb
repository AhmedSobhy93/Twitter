
<%= form_for @micropost,:url => {:controller => "microposts",:action => "create"} do |f|%>
<%= render 'shared/error_messages' ,object: f.object %>

<div class="form-group ">
	<%= f.text_field :content ,placeholder: "Enter your post",class: "form-control description" %>
</div>
<%= f.submit "Post" ,class: "description" %>


<% end %>